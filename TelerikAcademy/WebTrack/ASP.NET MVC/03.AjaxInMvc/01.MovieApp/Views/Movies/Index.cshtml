@{
    ViewBag.Title = "Index";
}

@using _01.MovieApp.Models
@model List<Movie>

@{
    ViewBag.Title = "Home Page";
}

@Ajax.ActionLink("Create Movie", "GetCreateView", null,
                       new AjaxOptions()
                       {
                           HttpMethod = "Get",
                           InsertionMode = InsertionMode.Replace,
                           UpdateTargetId = "template"
                       }, null)

<table class="table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Director Name</th>
            <th>Male Lead Name</th>
            <th>Female Lead Name</th>
            <th>Studio Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Title</td>
                <td>@Model[i].Year</td>
                <td>@Model[i].Director.Name</td>
                <td>@Model[i].LeadMaleActor.Name</td>
                <td>@Model[i].LeadFemaleActress.Name</td>
                <td>@Model[i].Studio.Name</td>
                <td>
                    @Ajax.ActionLink("Edit", "GetEditView", new
                       {
                           id = Model[i].Id
                       },
                       new AjaxOptions()
                       {
                           HttpMethod = "Get",
                           InsertionMode = InsertionMode.Replace,
                           UpdateTargetId = "template"
                       }, null)
                </td>
                <td>
                    @Ajax.ActionLink("Delete", "GetDeleteView", new {
                        id = Model[i].Id
                        }, new AjaxOptions()
                       {
                           HttpMethod = "Get",
                           InsertionMode = InsertionMode.Replace,
                           UpdateTargetId = "template"
                       }, null)
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="template"></div>
